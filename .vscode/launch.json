  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Notify Command",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/packages/cli/main.go",
      "args": ["notify"],
      "env": {
        "SLACK_ACCESS_TOKEN": "YOU_TOKEN",
        "SLACK_PARAM_CHANNEL": "YOUR_CHANNEL",
        "SLACK_PARAM_TEMPLATE": "YOUR_TEMPLATE",
        "CCI_STATUS": "pass",
        "SLACK_PARAM_DEBUG": "1"
      }
    }
  ]
}