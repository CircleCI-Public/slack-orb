{
  "text": "CircleCI job failed.",
  "blocks": [
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "Job Failed. :red_circle:",
        "emoji": true
      }
    },
    {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*Branch*: ${CIRCLE_BRANCH}"
        },
        {
          "type": "mrkdwn",
          "text": "*Job*: ${CIRCLE_JOB}"
        }
      ]
    },
    {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*Commit*: ${CURRENT_COMMIT_TEXT}"
        }
      ]
    },
    {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*Mentions*: ${SLACK_PARAM_MENTIONS}"
        }
      ]
    },
    {
      "type": "actions",
      "elements": [
        {
          "type": "button",
          "text": {
            "type": "plain_text",
            "text": "View Job"
          },
          "url": "${CIRCLE_BUILD_URL}"
        }
      ]
    }
  ]
}

